{
  "name": "mustache-mailer",
  "version": "2.1.2",
  "description": "send emails using nodemailer, and mustache templates.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --check-leaks --ui exports --require blanket -R mocoverage"
  },
  "bin": "./bin/mustache-mailer.js",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/npm/mustache-mailer"
  },
  "config": {
    "blanket": {
      "pattern": "index.js",
      "data-cover-never": [
        "node_modules",
        "test"
      ],
      "output-reporter": "spec"
    }
  },
  "keywords": [
    "mustache",
    "mail",
    "template",
    "nodemailer"
  ],
  "author": "Ben Coe <ben@npmjs.com>",
  "license": "ISC",
  "devDependencies": {
    "blanket": "^1.1.6",
    "chai": "^2.0.0",
    "coveralls": "^2.11.2",
    "mocha": "^2.1.0",
    "mocha-lcov-reporter": "0.0.1",
    "mocoverage": "^1.0.0",
    "nodemailer-mock-transport": "^1.0.0"
  },
  "dependencies": {
    "bluebird": "^2.9.9",
    "handlebars": "^3.0.0",
    "handlebars-async": "0.0.3",
    "lodash": "^3.2.0",
    "nodemailer": "^1.3.0",
    "yargs": "^3.0.4"
  }
}
